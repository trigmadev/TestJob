<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jornalero="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lyt_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <Jornalero.droid.JornaleroTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                jornalero:customFont="fonts/SF-UI-Text-Bold.ttf"
                android:gravity="center_horizontal"
                android:text="@string/jornalero_txt"
                android:textColor="@color/white"
                android:textSize="35sp" />
            <Jornalero.droid.JornaleroTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                jornalero:customFont="fonts/SF-UI-Text-Semibold.ttf"
                android:text="@string/sin_in_to_your_account_txt"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layt_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <Jornalero.droid.JornaleroTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_email_phone_no_txt"
                    jornalero:customFont="fonts/SF-UI-Text-Regular.ttf"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <Jornalero.droid.JornaleroEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_box"
                    jornalero:customFont="fonts/SF-UI-Text-Regular.ttf"
                    android:singleLine="true"
                    android:hint="@string/type_here_txt"
                    android:paddingLeft="15dp"
                    android:textColor="@color/edit_text_color"
                    android:textSize="17sp" />
            </LinearLayout>
            <Jornalero.droid.JornaleroTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                jornalero:customFont="fonts/SF-UI-Text-Regular.ttf"
                android:text="@string/your_password_txt"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <RelativeLayout
                android:id="@+id/rel_create_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <Jornalero.droid.JornaleroEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_box"
                    jornalero:customFont="fonts/SF-UI-Text-Regular.ttf"
                    android:hint="@string/type_here_txt"
                    android:paddingLeft="15dp"
                    android:textColor="@color/edit_text_color"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="17sp" />
                <ImageView
                    android:id="@+id/img_view_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/view_tab" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/layt_center"
            android:layout_marginTop="60dp"
            android:orientation="vertical">
            <Jornalero.droid.JornaleroButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                jornalero:customFont="fonts/SF-UI-Display-Semibold.ttf"
                android:layout_marginRight="10dp"
                android:background="@drawable/signup_btn"
                android:text="@string/signIn_txt"
                android:textSize="15sp"
                android:textColor="@color/white" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <Jornalero.droid.JornaleroTextView
                    android:id="@+id/tvForgotPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    jornalero:customFont="fonts/SF-UI-Text-Semibold.ttf"
                    android:text="@string/forgot_password_txt"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <Jornalero.droid.JornaleroTextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    jornalero:customFont="fonts/SF-UI-Text-Semibold.ttf"
                    android:layout_centerInParent="true"
                    android:text="@string/signUp_txt"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>